<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="showHelp"
        android:title="@string/settings_show_help"
        android:defaultValue="true" />
    <ListPreference
        android:key="countdownStartValue"
        android:title="@string/settings_countdown_start_value"
        android:entries="@array/settings_countdown_start_values"
        android:entryValues="@array/settings_countdown_start_values"
        android:defaultValue="3" />
    <ListPreference
        android:key="repUpDownTime"
        android:title="@string/settings_rep_up_down_time"
        android:entries="@array/settings_rep_up_down_time_titles"
        android:entryValues="@array/settings_rep_up_down_time_values"
        android:defaultValue="2000" />
    <ListPreference
        android:key="repPauseTime"
        android:title="@string/settings_rep_pause_time"
        android:entries="@array/settings_rep_pause_time_titles"
        android:entryValues="@array/settings_rep_pause_time_values"
        android:defaultValue="1000" />
    <!--<CheckBoxPreference-->
        <!--android:key="useDiagnostics"-->
        <!--android:title="@string/settings_diagnostics"-->
        <!--android:defaultValue="true" />-->
    <Preference android:title="@string/privacy_policy" >
        <intent android:action="android.intent.action.VIEW"
            android:data="https://github.com/guni82hu/ConvictMetronome/blob/master/privacy_policy.md" />
    </Preference>
</PreferenceScreen>